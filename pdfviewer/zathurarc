set selection-clipboard clipboard

map y navigate previous
map e navigate next
map i set recolor

set recolor-lightcolor "rgba(40,42,54,1)"
set recolor-darkcolor "rgba(248,248,242,1)"
set highlight-active-color "rgba(255, 0, 0, 0.5)"
set recolor false
set recolor-keephue true

set statusbar-fg "#008000"
set statusbar-bg "#080808"

map i set recolor
