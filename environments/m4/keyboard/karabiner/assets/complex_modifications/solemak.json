{
  "title": "Solemak",
  "rules": [
    {
      "description": "Solemak (best-effort from XKB) + Caps=Ctrl + AE11=Hyper (Cmd+Ctrl+Opt+Shift)",
      "manipulators": [
        {
          "type": "basic",
          "description": "Caps Lock -> Left Control",
          "from": {
            "key_code": "caps_lock",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            { "key_code": "left_control" }
          ]
        },

        {
          "type": "basic",
          "description": "AE11 best-effort: hyphen key -> Hyper when held, '-' when tapped",
          "from": {
            "key_code": "hyphen",
            "modifiers": { "optional": ["any"] }
          },
          "to_if_held_down": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_command", "left_control", "left_option"]
            }
          ],
          "to_if_alone": [
            { "key_code": "hyphen" }
          ]
        },
        {
          "type": "basic",
          "description": "AE11 fallback: equal_sign key -> Hyper when held, '=' when tapped",
          "from": {
            "key_code": "equal_sign",
            "modifiers": { "optional": ["any"] }
          },
          "to_if_held_down": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_command", "left_control", "left_option"]
            }
          ],
          "to_if_alone": [
            { "key_code": "equal_sign" }
          ]
        },

        {
          "type": "basic",
          "description": "Fix ISO < > key misdetected as grave_accent_and_tilde",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            { "key_code": "non_us_backslash" }
          ]
        },

        {
          "type": "basic",
          "description": "Optional: Tab -> Backspace (matches your XKB <TAB> { [BackSpace...] })",
          "from": {
            "key_code": "tab",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            { "key_code": "delete_or_backspace" }
          ]
        },

        { "type": "basic", "from": { "key_code": "e", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "f" }] },
        { "type": "basic", "from": { "key_code": "r", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "p" }] },
        { "type": "basic", "from": { "key_code": "t", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "g" }] },
        { "type": "basic", "from": { "key_code": "y", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "j" }] },
        { "type": "basic", "from": { "key_code": "u", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "l" }] },
        { "type": "basic", "from": { "key_code": "i", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "u" }] },
        { "type": "basic", "from": { "key_code": "o", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "y" }] },
        { "type": "basic", "from": { "key_code": "p", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "period" }] },

        { "type": "basic", "from": { "key_code": "s", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "r" }] },
        { "type": "basic", "from": { "key_code": "d", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "s" }] },
        { "type": "basic", "from": { "key_code": "f", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "t" }] },
        { "type": "basic", "from": { "key_code": "g", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "d" }] },
        { "type": "basic", "from": { "key_code": "j", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "n" }] },
        { "type": "basic", "from": { "key_code": "k", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "e" }] },
        { "type": "basic", "from": { "key_code": "l", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "i" }] },
        { "type": "basic", "from": { "key_code": "semicolon", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "o" }] },

        { "type": "basic", "from": { "key_code": "n", "modifiers": { "optional": ["any"] } }, "to": [{ "key_code": "k" }] }
      ]
    }
  ]
}
